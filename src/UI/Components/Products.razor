    }
    else
    {
      _errorMessage = $"Error: {response.Error}";
      _productsModel = new ProductsModel();
    }
  }

  async Task AddProductToBasketAsync(ItemModel itemModel)
  {
    var response = await BasketsService.AddItemAsync($"api/item/", itemModel);

